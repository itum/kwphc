<?xml version="1.0" encoding="UTF-8"?>
<wpml-config>
    <!-- Plugin Information -->
    <language-switcher-settings>
        <key name="university-management">
            <key name="default_language">fa</key>
        </key>
    </language-switcher-settings>
    
    <!-- Custom Post Types -->
    <post-types>
        <post-type translate="1">um_calendar_events</post-type>
        <post-type translate="1">um_classes</post-type>
        <post-type translate="1">um_videos</post-type>
        <post-type translate="1">um_seminars</post-type>
        <post-type translate="1">um_employment_exams</post-type>
    </post-types>
    
    <!-- Taxonomies -->
    <taxonomies>
        <taxonomy translate="1">um_video_category</taxonomy>
        <taxonomy translate="1">um_seminar_category</taxonomy>
    </taxonomies>
    
    <!-- Custom Fields for translation -->
    <custom-fields>
        <!-- Video meta fields -->
        <custom-field action="translate">_um_video_link</custom-field>
        <custom-field action="translate">video_title</custom-field>
        <custom-field action="translate">description_video</custom-field>
        <custom-field action="translate">category_video</custom-field>
        <custom-field action="copy">_um_video_type</custom-field>
        <custom-field action="copy">_um_video_file_id</custom-field>
        <custom-field action="copy">_um_video_views</custom-field>
        
        <!-- Seminar meta fields -->
        <custom-field action="translate">_seminar_teacher</custom-field>
        <custom-field action="translate">_seminar_time</custom-field>
        <custom-field action="translate">_seminar_button_text</custom-field>
        <custom-field action="copy">_seminar_button_link</custom-field>
        
        <!-- Employment exam meta fields -->
        <custom-field action="translate">_exam_position</custom-field>
        <custom-field action="translate">_exam_department</custom-field>
        <custom-field action="translate">_exam_location</custom-field>
        <custom-field action="translate">_exam_requirements</custom-field>
        <custom-field action="copy">_exam_date</custom-field>
        <custom-field action="copy">_exam_time</custom-field>
        <custom-field action="copy">_exam_duration</custom-field>
        <custom-field action="copy">_exam_application_deadline</custom-field>
        <custom-field action="copy">_exam_status</custom-field>
        
        <!-- News import meta fields -->
        <custom-field action="copy">_um_imported_news</custom-field>
        <custom-field action="copy">_um_original_id</custom-field>
        <custom-field action="copy">_um_news_hits</custom-field>
        <custom-field action="copy">_um_news_date</custom-field>
        <custom-field action="copy">_um_news_time</custom-field>
        <custom-field action="copy">_um_year</custom-field>
        <custom-field action="copy">_um_month</custom-field>
        <custom-field action="copy">_um_num_month</custom-field>
        <custom-field action="copy">_um_day</custom-field>
    </custom-fields>
    
    <!-- Admin text strings -->
    <admin-texts>
        <key name="university-management-admin">
            <key name="title">مدیریت دانشگاه</key>
            <key name="calendar">تقویم دانشگاه</key>
            <key name="videos">مدیریت ویدیوها</key>
            <key name="classes">زمان‌بندی کلاس‌ها</key>
            <key name="database">ورود اطلاعات پایگاه داده</key>
            <key name="settings">تنظیمات عمومی</key>
            <key name="azmoon">آزمون‌های استخدامی</key>
            <key name="employment">مدیریت آزمون‌های استخدامی</key>
        </key>
    </admin-texts>
    
    <!-- Shortcodes (if any) -->
    <shortcodes>
        <!-- Add shortcodes here if you have any -->
    </shortcodes>
</wpml-config> 